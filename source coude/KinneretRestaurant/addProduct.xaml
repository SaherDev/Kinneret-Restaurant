        <Button x:Name="btnadd" Content="הוספה" HorizontalAlignment="Left" Margin="95,387,0,0" VerticalAlignment="Top" Width="90" Click="btnadd_Click" FontFamily="David" FontSize="15.938" Height="29"  FontWeight="Bold"/>
        <TextBox x:Name="textBoxProduct" HorizontalAlignment="Left" Height="30" Margin="266,332,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.716,0.429" FontSize="15.938" TextDecorations="{x:Null}" TextAlignment="Right"/>
        <Label x:Name="label_Copy2" Content="שם מוצר" HorizontalAlignment="Left" Margin="305,308,0,0" VerticalAlignment="Top" FontFamily="David" FontWeight="Bold" FontSize="15.937767" Height="24" RenderTransformOrigin="1.012,0.436">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <TextBox x:Name="textBoxCategory" HorizontalAlignment="Left" Height="30" Margin="154,332,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.716,0.429" FontSize="15.938" TextDecorations="{x:Null}" TextAlignment="Right"/>
        <TextBox x:Name="textBoxPrice" HorizontalAlignment="Left" Height="30" Margin="38,332,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.716,0.429" FontSize="15.938" TextDecorations="{x:Null}" TextAlignment="Right"/>
        <Label x:Name="label_Copy1" Content="מחיר" HorizontalAlignment="Left" Margin="95,308,0,0" VerticalAlignment="Top" FontFamily="David" FontWeight="Bold" FontSize="15.937767" Height="24" RenderTransformOrigin="1.012,0.436">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <Label x:Name="label_Copy" Content="קטגוריה" HorizontalAlignment="Left" Margin="186,308,0,0" VerticalAlignment="Top" FontFamily="David" FontWeight="Bold" FontSize="15.937767" Height="24" RenderTransformOrigin="1.012,0.436">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>

    </Grid>
</Window>
