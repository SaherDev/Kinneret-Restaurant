        xmlns:local="clr-namespace:KinneretRestaurant"
        mc:Ignorable="d"
        Title="addProduct" Height="475" Width="416">
    <Grid  x:Name="grid" Background="#FFECF1F7" Loaded="grid_Loaded" >
        <Button x:Name="btndelete" Click="btndelete_Click" Content="מחיקה" HorizontalAlignment="Left" Margin="225,387,0,0" VerticalAlignment="Top" Width="88"  FontFamily="David" FontSize="15.938" Height="29"  FontWeight="Bold" RenderTransformOrigin="0.34,0.517" />
