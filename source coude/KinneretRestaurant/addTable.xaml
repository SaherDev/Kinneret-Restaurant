        <Button x:Name="btndelete" Click="btndelete_Click" Content="מחיקה" HorizontalAlignment="Left" Margin="176,389,0,0" VerticalAlignment="Top" Width="88"  FontFamily="David" FontSize="15.938" Height="30"  FontWeight="Bold" RenderTransformOrigin="0.34,0.517" />
        <Button x:Name="btnadd" Content="הוספה" HorizontalAlignment="Left" Margin="59,389,0,0" VerticalAlignment="Top" Width="90" Click="btnadd_Click" FontFamily="David" FontSize="15.938" Height="30"  FontWeight="Bold"/>
        <TextBox x:Name="textBoxTableNumber" HorizontalAlignment="Left" Height="30" Margin="169,335,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.716,0.429" FontSize="15.938" TextDecorations="{x:Null}" TextAlignment="Right"/>
        <Label x:Name="label_Copy2" Content="מספר שולחן" HorizontalAlignment="Left" Margin="182,311,0,0" VerticalAlignment="Top" FontFamily="David" FontWeight="Bold" FontSize="15.937767" Height="24" RenderTransformOrigin="1.012,0.436">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <TextBox x:Name="textBoxChaires" HorizontalAlignment="Left" Height="30" Margin="52,335,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.716,0.429" FontSize="15.938" TextDecorations="{x:Null}" TextAlignment="Right"/>
        <Label x:Name="label_Copy" Content="מספר כבאות" HorizontalAlignment="Left" Margin="65,312,0,0" VerticalAlignment="Top" FontFamily="David" FontWeight="Bold" FontSize="15.937767" Height="24" RenderTransformOrigin="1.012,0.436">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>

    </Grid>
</Window>
